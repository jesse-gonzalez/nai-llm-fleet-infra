{{ $cluster := (ds "config").k8s_cluster -}}
{{ $flux := (ds "config").flux -}}
{{ $infra := (ds "config").infra -}}
{{ $services := (ds "config").services -}}
{{ $apps := (ds "config").apps -}}
{{ $nutanix := $infra.nutanix -}}
#####################################################
## Required variables for each cluster
###

BOOTSTRAP_cluster_distribution="{{ $cluster.distribution | required }}"
BOOTSTRAP_cluster_name="{{ $cluster.name | required }}"
BOOTSTRAP_cluster_profile="{{ $cluster.profile | required }}"
BOOTSTRAP_environment="{{ $cluster.environment | required }}"

## Required Github Creds
BOOTSTRAP_github_repo_url="{{with $flux.github.repo_url | required }}{{.}}{{end}}"
BOOTSTRAP_github_user="{{with $flux.github.repo_user | required }}{{.}}{{end}}"
BOOTSTRAP_github_api_token="{{with $flux.github.repo_api_token | required }}{{.}}{{end}}"

## Required Docker Hub Creds (needed to avoid Docker Hub Rate Limits)
BOOTSTRAP_docker_hub_user="{{with $cluster.registry.docker_hub.user | required }}{{.}}{{end}}"
BOOTSTRAP_docker_hub_password="{{with $cluster.registry.docker_hub.password | required }}{{.}}{{end}}"
{{- if $services.kube_vip.enabled }}

#####################################################
## Required variables for kube-vip and depedent services
## kube-vip specific configs
BOOTSTRAP_kube_vip_ipam_range="{{with $services.kube_vip.ipam_range | required }}{{.}}{{end}}"
{{- if $services.nginx_ingress.enabled }}
## ingress-nginx dependent configs
BOOTSTRAP_kube_vip_nginx_ingress_ipam="{{with $services.nginx_ingress.vip | required }}{{.}}/32{{end}}"

## Wildcard Ingress Subdomain used for all ingress objects within cluster 
## (assumes *.${wildcard_ingress_subdomain} for ingress-nginx and *.llm.${wildcard_ingress_subdomain} for istio) DNS Records exist
BOOTSTRAP_wildcard_ingress_subdomain="{{with $services.nginx_ingress.wildcard_ingress_subdomain | required }}{{.}}{{end}}"

## Wildcard Ingress Subdomain for management cluster.
BOOTSTRAP_management_cluster_ingress_subdomain="{{with $services.nginx_ingress.management_cluster_ingress_subdomain | required }}{{.}}{{end}}"
{{- end }}
{{- if $services.istio.enabled }}

## istio dependent configs
BOOTSTRAP_kube_vip_istio_system_ipam="{{with $services.istio.vip | required }}{{.}}/32{{end}}"
{{- end }}
{{- end }}
{{- if $nutanix.prism_central.enabled }}

## Required Nutanix Prism Creds
BOOTSTRAP_prism_central_endpoint="{{with $nutanix.prism_central.endpoint | required }}{{.}}{{end}}"
BOOTSTRAP_prism_central_user="{{with $nutanix.prism_central.user | required }}{{.}}{{end}}"
BOOTSTRAP_prism_central_password="{{with $nutanix.prism_central.password | required }}{{.}}{{end}}"
{{- end }}
{{- if $nutanix.objects.enabled }}

## Required Nutanix Objects Store Configs
BOOTSTRAP_objects_host="{{with $nutanix.objects.host | required }}{{.}}{{end}}"
BOOTSTRAP_objects_port="{{with $nutanix.objects.port | default "80" }}{{.}}{{end}}"
BOOTSTRAP_objects_region="{{with $nutanix.objects.region | default "us-east-1" }}{{.}}{{end}}"
BOOTSTRAP_objects_use_ssl="{{with $nutanix.objects.use_ssl | default "false" }}{{.}}{{end}}"

## Required Nutanix Objects Creds
BOOTSTRAP_objects_access_key="{{with $nutanix.objects.access_key | required }}{{.}}{{end}}"
BOOTSTRAP_objects_secret_key="{{with $nutanix.objects.secret_key | required }}{{.}}{{end}}"
{{- end }}
{{- if $services.cert_manager.enabled }}
{{- if $services.cert_manager.aws_route53_acme_dns.enabled }}

## Required AWS Route53 Access Creds
BOOTSTRAP_aws_route53_dns_zone="{{with $services.cert_manager.aws_route53_acme_dns.zone | required }}{{.}}{{end}}"
BOOTSTRAP_aws_route53_region="{{with $services.cert_manager.aws_route53_acme_dns.region | required }}{{.}}{{end}}"
BOOTSTRAP_aws_access_key_id="{{with $services.cert_manager.aws_route53_acme_dns.key_id | required }}{{.}}{{end}}"
BOOTSTRAP_aws_access_key_secret="{{with $services.cert_manager.aws_route53_acme_dns.key_secret | required }}{{.}}{{end}}"
{{- end }}
{{- end }}
{{- if $cluster.gpu_operator.enabled }}

## GPU configs
BOOTSTRAP_gpu_cuda_toolkit_version="{{ $cluster.gpu_operator.cuda_toolkit_version | default "v1.14.3-centos7" }}"
{{- if $cluster.gpu_operator.time_slicing.enabled }}
BOOTSTRAP_gpu_time_slicing_replica_count="{{ $cluster.gpu_operator.time_slicing.replica_count | default "2" }}"
{{- end }}
{{- end }}
{{- if $apps.gptnvd_reference_app.enabled }}
{{- if $nutanix.objects.enabled }}

## Nutanix Objects App Specific Bucket Name
BOOTSTRAP_milvus_objects_bucket_name="{{with $apps.gptnvd_reference_app.milvus_bucket_name | required }}{{.}}{{end}}"
BOOTSTRAP_documents_objects_bucket_name="{{with $apps.gptnvd_reference_app.documents_bucket_name | required }}{{.}}{{end}}"
{{- end }}
{{- end }}
{{- if $apps.nai_helm.enabled }}

## Required NAI LLM Helm Chart Configs
BOOTSTRAP_model="{{with $apps.nai_helm.model | required }}{{.}}{{end}}"
BOOTSTRAP_revision="{{with $apps.nai_helm.revision | required }}{{.}}{{end}}"
BOOTSTRAP_maxTokens="{{with $apps.nai_helm.model | required }}{{.}}{{end}}"
BOOTSTRAP_repPenalty="{{with $apps.nai_helm.model | required }}{{.}}{{end}}"
BOOTSTRAP_temperature="{{with $apps.nai_helm.model | required }}{{.}}{{end}}"
BOOTSTRAP_topP="{{with $apps.nai_helm.model | required }}{{.}}{{end}}"
BOOTSTRAP_useExistingNFS="{{with $apps.nai_helm.useExistingNFS | default "false" }}{{.}}{{end}}"
{{- if $apps.nai_helm.useExistingNFS }}
BOOTSTRAP_nfs_export="{{with $apps.nai_helm.nfs_export | required }}{{.}}{{end}}"
BOOTSTRAP_nfs_server="{{with $apps.nai_helm.nfs_server | required }}{{.}}{{end}}"
{{- end }}
{{- end }}
